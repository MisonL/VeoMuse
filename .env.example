# .env.example - 环境变量示例文件

# 服务器配置
PORT=3000
HOST=localhost

# Gemini API 密钥 (逗号分隔，支持多个密钥轮换)
# 如果只有一个密钥，使用 GEMINI_API_KEY
GEMINI_API_KEYS="YOUR_GEMINI_API_KEY_1,YOUR_GEMINI_API_KEY_2"
# 或者
# GEMINI_API_KEY="YOUR_SINGLE_GEMINI_API_KEY"

# 文件上传配置
MAX_UPLOAD_SIZE=104857600 # 100 MB
UPLOAD_DIR=uploads/
GENERATED_DIR=generated/

# 视频生成配置
DEFAULT_VIDEO_MODEL=veo-3.0-generate-preview
DEFAULT_OPTIMIZATION_MODEL=gemini-2.5-flash
VIDEO_POLLING_INTERVAL=10000 # 毫秒
MAX_API_RETRIES=3

# 文件清理配置
MAX_FILE_AGE=172800000 # 2天，毫秒
CLEANUP_INTERVAL=86400000 # 24小时，毫秒

# GPU支持配置 (true/false)
GPU_NVIDIA=false
GPU_INTEL=true
GPU_AMD=false

# CORS 配置
# 生产环境中应限制为你的前端域名
CORS_ALLOWED_ORIGINS="http://localhost:3000,http://127.0.0.1:3000,https://veomuse.com"
