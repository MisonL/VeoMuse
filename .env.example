# Google Gemini API密钥配置
# 支持多个API密钥，用逗号分隔（用于负载均衡和备用）
GEMINI_API_KEYS=your_api_key_1,your_api_key_2,your_api_key_3

# 服务器配置
PORT=3000
HOST=localhost

# 文件上传配置
MAX_UPLOAD_SIZE=104857600  # 100MB in bytes
UPLOAD_DIR=uploads/
GENERATED_DIR=generated/

# 视频生成模型配置
DEFAULT_VIDEO_MODEL=veo-3.0-generate-preview
DEFAULT_OPTIMIZATION_MODEL=gemini-2.5-flash

# API轮询配置
VIDEO_POLLING_INTERVAL=10000  # 10秒
MAX_API_RETRIES=3

# 文件清理配置
MAX_FILE_AGE=172800000  # 2天 (2 * 24 * 60 * 60 * 1000 毫秒)
CLEANUP_INTERVAL=86400000  # 24小时 (24 * 60 * 60 * 1000 毫秒)

# 调试模式（可选）
DEBUG=false
NODE_ENV=production

# Redis配置（如果使用Redis缓存，可选）
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=

# JWT配置（如果启用用户认证功能）
# JWT_SECRET=your_jwt_secret_key_here
# JWT_EXPIRES_IN=24h

# 安全配置
# RATE_LIMIT_WINDOW_MS=900000  # 15分钟
# RATE_LIMIT_MAX_REQUESTS=100  # 每个窗口期最大请求数

# API密钥加密配置
ENCRYPTION_KEY=your_32_byte_hex_encryption_key_here

# 管理员访问密钥
ADMIN_KEY=your_admin_access_key_here

# 日志配置
LOG_LEVEL=info  # error, warn, info, debug

# IP黑名单配置（多个IP用逗号分隔）
# IP_BLACKLIST=192.168.1.100,10.0.0.50

# 文件安全配置
FILE_SECURITY_ENABLED=true
MAX_FILENAME_LENGTH=255

# 内容安全配置
CONTENT_FILTER_ENABLED=true
MAX_PROMPT_LENGTH=5000
MAX_NEGATIVE_PROMPT_LENGTH=2000